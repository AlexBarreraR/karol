---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Fabaro">
    <section class="text-gray-600 body-font bg-white dark:bg-white pt-24 pb-8">
        <div
            class="container mx-auto flex md:px-24 md:py-10 md:flex-row flex-col items-center"
        >
            <div
                class="lg:flex-grow mt-5 md:mt-0 md:w-1.5/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center"
            >
                <h1
                    class="text-2xl font-extrabold leading-9 tracking-tight mb-3 text-gray-900 dark:text-zinc-950 sm:text-4xl sm:leading-10 md:text-5xl md:leading-normal"
                >
                    Muebles Fabaro.
                </h1>

                <p
                    class="mb-8 md:pl-0 pl-2 pr-2 leading-relaxed dark:text-zinc-950"
                >
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Eaque animi necessitatibus consequatur soluta temporibus
                    labore accusantium nesciunt dolores sit obcaecati? Aperiam
                    odio minus delectus velit harum dolores quia, officia
                    dolorem..
                </p>
                <div class="flex justify-center">
                    <a
                        href="#"
                        class="inline-flex text-white bg-zinc-950 border-0 py-2 px-6 focus:outline-none hover:bg-zinc-600 rounded text-lg"
                    >
                        Explorar
                    </a>
                    <a
                        href="https://www.instagram.com/jo_muebles.ls?igsh=Z2J1aWp1dTRmYnN2"
                        class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg"
                    >
                        Ver más</a
                    >
                </div>
            </div>
            <div class="lg:max-w-lg lg:w-full mb-5 md:mb-0 md:w-1/2 w-3/6">
                <img
                    class="object-cover object-center rounded bg-transparent"
                    alt="hero"
                    src="image/IMG-29.jpeg"
                />
            </div>
        </div>
    </section>

    <div class="container px-6 pb-8 mx-auto">
        <hr class="my-10 border-gray-200 dark:border-gray-300" />
    </div>

    <div class="flex flex-col text-center w-full mb-20 pt-24">
        <h2
            class="text-xs text-zinc-500 tracking-widest font-medium title-font mb-1"
        >
            Maestro José Barrera
        </h2>
        <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">
            Muebles a Medida
        </h1>
    </div>

    <div class="container px-6 mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div>
                <img
                    class="h-auto max-w-full rounded-lg"
                    src="image/IMG-1.jpeg"
                    alt=""/>
            </div>
            <div>
